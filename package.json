{
	"name": "tokengrip",
	"version": "0.3.1",
	"description": "Creates and verifies signed tokens using rotated credentials",
	"keywords": [
		"signature",
		"signed",
		"token",
		"keygrip",
		"rotated"
	],
	"author": "Batterii, LLC",
	"license": "MIT",
	"repository": "github:Batterii/tokengrip",
	"engines": {
		"node": ">=8.6",
		"npm": ">=5.3"
	},
	"files": [
		"dist/",
		"!dist/*.test.js",
		"!dist/*.test.js.map"
	],
	"scripts": {
		"lint": "eslint . --ext .ts",
		"lintf": "eslint . --ext .ts --fix",
		"prebuild": "rm -rf dist",
		"build": "tsc && tsc --project tsconfig-types.json",
		"test": "mocha src/**/*.test.ts",
		"test:build": "npm run build && mocha --config .mocharc-dist.yaml dist/**/*.test.js",
		"preversion": "npm run lint && npm run test:build",
		"prepublishOnly": "git push && git push --tags"
	},
	"main": "dist/index.js",
	"devDependencies": {
		"@batterii/eslint-config-vurvey": "^0.3.7",
		"@types/chai": "^4.2.9",
		"@types/lodash": "^4.14.149",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.12.28",
		"@types/tsscmp": "^1.0.0",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"chai": "^4.2.0",
		"eslint": "^7.32.0",
		"mocha": "^7.0.1",
		"source-map-support": "^0.5.16",
		"ts-node": "^8.6.2",
		"typescript": "3.8.2"
	},
	"dependencies": {
		"@batterii/encode-object": "^2.1.0",
		"@batterii/errors": "^2.2.0",
		"base64url": "^3.0.1",
		"lodash": "^4.17.15",
		"nani": "^3.2.1",
		"tsscmp": "^1.0.6"
	}
}
